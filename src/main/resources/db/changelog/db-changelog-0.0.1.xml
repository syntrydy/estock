<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
	<changeSet id="ES-01" author="gasmyr.mougang">
		<createTable tableName="shop">
			<column autoIncrement="true" name="id" type="int8">
				<constraints primaryKey="true" primaryKeyName="shop_pkey"
					nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)" />
			<column name="email" type="varchar(255)" />
			<column name="phonenumber" type="varchar(255)" />
			<column name="website" type="varchar(255)" />
			<column name="isactive" type="bool" defaultValue="false" />
			<column name="version" type="int8" />
		</createTable>
		<insert tableName="shop">
			<column name="name" value="Atlancia Fashion" />
			<column name="description" value="Atlancia Fashion best price for ever" />
			<column name="email" value="atlancia@fashion.com" />
			<column name="phonenumber" value="+237 696534361" />
			<column name="website" value="http://www.atlanciafashion.com" />
			<column name="isactive" valueBoolean="true" />
			<column name="version" value="0" />
		</insert>
		<createTable tableName="category">
			<column autoIncrement="true" name="id" type="int8">
				<constraints primaryKey="true" primaryKeyName="category_pkey"
					nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)" />
			<column name="version" type="int8" />
		</createTable>
		<createTable tableName="order">
			<column autoIncrement="true" name="id" type="int8">
				<constraints primaryKey="true" primaryKeyName="order_pkey"
					nullable="false" />
			</column>
			<column name="key" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)" />
			<column name="amountToPay" type="double" />
			<column name="recievedAmount" type="double" />
			<column name="paymentStatus" type="varchar(255)" defaultValue="NotPaid" />
			<column name="currentDate" type="datetime" />
			<column name="version" type="int8" />
		</createTable>
		<!-- insert first location -->
		<createTable tableName="location">
			<column autoIncrement="true" name="id" type="int8">
				<constraints primaryKey="true" primaryKeyName="location_pkey"
					nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="code" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)" />
			<column name="shop_id" type="int8">
				<constraints nullable="false" />
			</column>
			<column name="version" type="int8" />
		</createTable>
		<addForeignKeyConstraint baseColumnNames="shop_id"
			baseTableName="location" constraintName="fk_location_shop_id"
			deferrable="true" initiallyDeferred="true" referencedColumnNames="id"
			referencedTableName="shop" />
		<insert tableName="location">
			<column name="name" value="Location One" />
			<column name="code" value="LOC-01" />
			<column name="description" value="My first location" />
			<column name="shop_id" valueNumeric="1" />
			<column name="version" valueNumeric="1" />
		</insert>
		<!-- init shelves -->
		<createTable tableName="shelf">
			<column autoIncrement="true" name="id" type="int8">
				<constraints primaryKey="true" primaryKeyName="shelf_pkey"
					nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="code" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(255)" />
			<column name="location_id" type="int8">
				<constraints nullable="false" />
			</column>
			<column name="version" type="int8" />
		</createTable>
		<addForeignKeyConstraint baseColumnNames="location_id"
			baseTableName="shelf" constraintName="fk_shelf_location_id"
			deferrable="true" initiallyDeferred="true" referencedColumnNames="id"
			referencedTableName="location" />
		<insert tableName="shelf">
			<column name="name" value="Shelf One" />
			<column name="code" value="Shelf-B12" />
			<column name="description" value="My first shelf" />
			<column name="location_id" valueNumeric="1" />
			<column name="version" valueNumeric="1" />
		</insert>

	</changeSet>
</databaseChangeLog>